---
import team from '../data/team.json';

// Combine all coaches and recruiting coordinator into one array
const allStaff = [
  ...team.coaches,
  team.recruitingCoordinator
];
---

<section id="coaches" class="section-padding bg-gray-50">
  <div class="container-narrow">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Our Coaching Staff
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Meet the dedicated coaches behind Stars National Walker. Our staff brings experience, passion, and a commitment to developing complete student-athletes.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      {allStaff.map((coach, index) => (
        <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow">
          <div class="w-20 h-20 bg-stars-navy rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <div class="text-center">
            <h3 class="text-xl font-bold text-gray-900 mb-1">{coach.name}</h3>
            <p class="text-stars-blue font-medium text-sm mb-3">{coach.title}</p>
            {coach.bio && (
              <p class="text-gray-600 text-sm mb-4 line-clamp-3">{coach.bio}</p>
            )}
            <a
              href={`mailto:${coach.email}`}
              class="inline-flex items-center gap-2 text-sm font-medium text-stars-navy hover:text-stars-blue transition-colors"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Email
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
