---
import PlayerCard from './PlayerCard.astro';
import players from '../data/players.json';

// Sort alphabetically by last name
const sortedPlayers = [...players].sort((a, b) => {
  return a.lastName.localeCompare(b.lastName);
});
---

<section id="roster" class="section-padding bg-white">
  <div class="container-narrow">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Our Roster
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto mb-4">
        Meet the talented athletes of Stars National Walker. Click on a player to view their full recruiting profile.
      </p>
      <a href="/coaches" class="inline-flex items-center gap-2 text-stars-blue hover:text-stars-navy font-medium transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        College coaches: View our filterable roster with stats, GPA, and recruiting status
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      {sortedPlayers.map(player => (
        <PlayerCard {...player} />
      ))}
    </div>
  </div>
</section>
