---
import team from '../data/team.json';

const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: '/', label: 'Home' },
  { href: '/#roster', label: 'Roster' },
  { href: '/#schedule', label: 'Schedule' },
  { href: '/#about', label: 'About' },
  { href: '/tryout', label: 'Join the Team' },
  { href: '/contact', label: 'Contact' },
];

const coachLinks = [
  { href: '/coaches', label: 'Coach Resources' },
  { href: '/coaches#roster', label: 'Full Roster' },
  { href: '/coaches#schedule', label: 'Tournament Schedule' },
];
---

<footer class="bg-stars-navy">
  <!-- Main Footer -->
  <div class="container-narrow py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">

      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center gap-3 mb-4">
          <img
            src="/logo.webp"
            alt="Stars National Walker Logo"
            class="h-12 w-auto"
          />
          <div>
            <div class="text-white font-bold text-lg leading-tight">Stars National</div>
            <div class="text-stars-silver text-sm font-medium tracking-wider">WALKER</div>
          </div>
        </a>
        <p class="text-white/60 text-sm mb-4">
          Elite {team.division} travel softball based in {team.location}. Competing in top-tier national tournaments.
        </p>
        <!-- Social Links -->
        <div class="flex items-center gap-4">
          {team.socialLinks?.twitter && (
            <a
              href={team.socialLinks.twitter}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 bg-white/10 hover:bg-stars-gold rounded-lg flex items-center justify-center text-white hover:text-stars-navy transition-all"
              aria-label="Follow us on X"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
          )}
          {team.socialLinks?.instagram && (
            <a
              href={team.socialLinks.instagram}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 bg-white/10 hover:bg-stars-gold rounded-lg flex items-center justify-center text-white hover:text-stars-navy transition-all"
              aria-label="Follow us on Instagram"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          )}
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-white font-bold text-sm uppercase tracking-wider mb-4">Quick Links</h4>
        <ul class="space-y-2">
          {quickLinks.map(link => (
            <li>
              <a href={link.href} class="text-white/60 hover:text-stars-gold transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- For Coaches -->
      <div>
        <h4 class="text-white font-bold text-sm uppercase tracking-wider mb-4">For College Coaches</h4>
        <ul class="space-y-2">
          {coachLinks.map(link => (
            <li>
              <a href={link.href} class="text-white/60 hover:text-stars-gold transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
        <a
          href="/coaches"
          class="inline-flex items-center gap-2 mt-4 px-4 py-2 bg-stars-gold text-stars-navy text-sm font-semibold rounded-lg hover:bg-stars-gold/90 transition-colors"
        >
          Coach Portal
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-white font-bold text-sm uppercase tracking-wider mb-4">Contact</h4>
        <ul class="space-y-3">
          <li>
            <a href={`mailto:${team.contactEmail}`} class="flex items-start gap-3 text-white/60 hover:text-stars-gold transition-colors group">
              <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span class="text-sm">{team.contactEmail}</span>
            </a>
          </li>
          {team.contactPhone && (
            <li>
              <a href={`tel:${team.contactPhone.replace(/[^0-9+]/g, '')}`} class="flex items-start gap-3 text-white/60 hover:text-stars-gold transition-colors">
                <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span class="text-sm">{team.contactPhone}</span>
              </a>
            </li>
          )}
          <li class="flex items-start gap-3 text-white/60">
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="text-sm">{team.location}</span>
          </li>
        </ul>

      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-white/10">
    <div class="container-narrow py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-white/40 text-sm text-center md:text-left">
          Â© {currentYear} {team.name}. All rights reserved.
        </p>
        <div class="flex items-center gap-6 text-sm">
          <span class="text-white/40">Part of</span>
          <a href="https://starsnational.com" target="_blank" rel="noopener noreferrer" class="text-white/60 hover:text-stars-gold transition-colors">
            Stars National Softball
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
