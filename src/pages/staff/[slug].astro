---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import team from '../../data/team.json';

// Generate slug from name
function generateSlug(name: string): string {
  return name.toLowerCase().replace(/\s+/g, '-');
}

// Combine all staff
const allStaff = [
  ...team.coaches.map(c => ({ ...c, type: 'coach' })),
  { ...team.recruitingCoordinator, type: 'coordinator' }
];

export function getStaticPaths() {
  const allStaff = [
    ...team.coaches.map(c => ({ ...c, type: 'coach' })),
    { ...team.recruitingCoordinator, type: 'coordinator' }
  ];

  return allStaff.map(staff => ({
    params: { slug: staff.name.toLowerCase().replace(/\s+/g, '-') },
    props: { staff }
  }));
}

const { staff } = Astro.props;
const pageTitle = `${staff.name} - ${staff.title} | Stars National Walker`;
---

<Layout title={pageTitle} description={staff.bio}>
  <Header />
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="bg-stars-navy py-16 md:py-24">
      <div class="container-narrow">
        <div class="flex flex-col md:flex-row items-center gap-8">
          <!-- Photo -->
          <div class="flex-shrink-0">
            {staff.photo ? (
              <img
                src={staff.photo}
                alt={staff.name}
                class="w-48 h-48 md:w-64 md:h-64 rounded-full object-cover border-4 border-white/20 shadow-2xl"
              />
            ) : (
              <div class="w-48 h-48 md:w-64 md:h-64 rounded-full bg-white/10 flex items-center justify-center border-4 border-white/20">
                <svg class="w-24 h-24 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
            )}
          </div>

          <!-- Info -->
          <div class="text-center md:text-left">
            <p class="text-stars-blue font-semibold mb-2">{staff.title}</p>
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
              {staff.name}
            </h1>
            <a
              href={`mailto:${staff.email}`}
              class="inline-flex items-center gap-2 text-white/80 hover:text-white transition-colors"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              {staff.email}
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Bio Section -->
    <section class="section-padding bg-white">
      <div class="container-narrow max-w-3xl">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">About {staff.name.split(' ')[0]}</h2>
        <div class="space-y-4">
          {staff.bio.split('\n').filter((p: string) => p.trim()).map((paragraph: string) => (
            <p class="text-lg text-gray-600 leading-relaxed">{paragraph}</p>
          ))}
        </div>

        <!-- Contact CTA -->
        <div class="mt-12 bg-stars-navy/5 rounded-xl p-8 text-center">
          <h3 class="text-xl font-bold text-gray-900 mb-4">Get in Touch</h3>
          <p class="text-gray-600 mb-6">
            Have questions about our program? Reach out to {staff.name.split(' ')[0]} directly.
          </p>
          <a
            href={`mailto:${staff.email}`}
            class="inline-flex items-center gap-2 font-bold px-6 py-3 rounded-lg transition-all hover:opacity-90"
            style="background-color: #FFD700; color: #062a4b;"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Email {staff.name.split(' ')[0]}
          </a>
        </div>

        <!-- Back Link -->
        <div class="mt-8 text-center">
          <a href="/#about" class="inline-flex items-center gap-2 text-stars-navy hover:text-stars-blue transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Team
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
