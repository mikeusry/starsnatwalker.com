---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import team from '../data/team.json';
---

<Layout title={`Contact ${team.name}`}>
  <Header />
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="bg-stars-navy py-16 md:py-20">
      <div class="container-narrow text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          Get In Touch
        </h1>
        <p class="text-lg text-white/70 max-w-2xl mx-auto">
          Interested in learning more about Stars National Walker? Fill out the form below or reach out directly to our coaching staff.
        </p>
      </div>
    </section>

    <!-- Contact Form & Info -->
    <section class="section-padding bg-white">
      <div class="container-narrow">
        <div class="grid md:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Send Us a Message</h2>
            <form class="space-y-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                  Full Name *
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-stars-navy focus:border-transparent"
                  placeholder="Your name"
                />
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  Email Address *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-stars-navy focus:border-transparent"
                  placeholder="your@email.com"
                />
              </div>

              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                  Phone Number
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-stars-navy focus:border-transparent"
                  placeholder="(555) 123-4567"
                />
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                  Message *
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-stars-navy focus:border-transparent"
                  placeholder="Tell us about your interest in Stars National Walker..."
                ></textarea>
              </div>

              <button
                type="submit"
                class="btn-primary w-full"
              >
                Send Message
              </button>
            </form>
          </div>

          <!-- Contact Information -->
          <div class="space-y-8">
            <div>
              <h2 class="text-2xl font-bold text-gray-900 mb-6">Contact Information</h2>

              <!-- Team Info -->
              <div class="bg-gray-50 rounded-xl p-6 mb-6">
                <div class="flex items-center gap-3 mb-4">
                  <div class="w-12 h-12 bg-stars-red rounded-full flex items-center justify-center">
                    <span class="text-white font-bold text-xl">â˜…</span>
                  </div>
                  <div>
                    <h3 class="font-bold text-gray-900">{team.name}</h3>
                    <p class="text-sm text-gray-600">{team.location}</p>
                  </div>
                </div>

                <div class="space-y-3">
                  <div class="flex items-center gap-3 text-gray-600">
                    <svg class="w-5 h-5 text-stars-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <a href={`mailto:${team.contactEmail}`} class="hover:text-stars-navy transition-colors">
                      {team.contactEmail}
                    </a>
                  </div>
                  <div class="flex items-center gap-3 text-gray-600">
                    <svg class="w-5 h-5 text-stars-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    <a href={`tel:${team.contactPhone}`} class="hover:text-stars-navy transition-colors">
                      {team.contactPhone}
                    </a>
                  </div>
                </div>
              </div>
            </div>

            <!-- Coaching Staff -->
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">Coaching Staff</h3>
              <div class="space-y-4">
                {team.coaches && team.coaches.map((coach: any) => (
                  <div class="bg-white border border-gray-200 rounded-xl p-4">
                    <div class="flex items-center gap-3 mb-2">
                      <div class="w-10 h-10 bg-stars-red/10 rounded-full flex items-center justify-center">
                        <svg class="w-5 h-5 text-stars-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                      </div>
                      <div>
                        <h4 class="font-bold text-gray-900">{coach.name}</h4>
                        <p class="text-sm text-stars-red">{coach.title}</p>
                      </div>
                    </div>
                    <a
                      href={`mailto:${coach.email}`}
                      class="text-sm text-stars-navy hover:text-stars-red transition-colors"
                    >
                      {coach.email}
                    </a>
                  </div>
                ))}

                <div class="bg-white border border-gray-200 rounded-xl p-4">
                  <div class="flex items-center gap-3 mb-2">
                    <div class="w-10 h-10 bg-stars-gold/20 rounded-full flex items-center justify-center">
                      <svg class="w-5 h-5 text-stars-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-bold text-gray-900">{team.recruitingCoordinator.name}</h4>
                      <p class="text-sm text-stars-gold">{team.recruitingCoordinator.title}</p>
                    </div>
                  </div>
                  <a
                    href={`mailto:${team.recruitingCoordinator.email}`}
                    class="text-sm text-stars-navy hover:text-stars-gold transition-colors"
                  >
                    {team.recruitingCoordinator.email}
                  </a>
                </div>
              </div>
            </div>

            <!-- Social Links -->
            {team.socialLinks && (
              <div>
                <h3 class="text-xl font-bold text-gray-900 mb-4">Follow Us</h3>
                <div class="flex gap-4">
                  {team.socialLinks.twitter && (
                    <a
                      href={team.socialLinks.twitter}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="w-12 h-12 bg-stars-navy rounded-full flex items-center justify-center hover:bg-stars-navy-light transition-colors"
                    >
                      <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                      </svg>
                    </a>
                  )}
                  {team.socialLinks.instagram && (
                    <a
                      href={team.socialLinks.instagram}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="w-12 h-12 bg-stars-navy rounded-full flex items-center justify-center hover:bg-stars-navy-light transition-colors"
                    >
                      <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                      </svg>
                    </a>
                  )}
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
