---
import team from '../data/team.json';

interface Props {
  title?: string;
  description?: string;
  variant?: 'light' | 'dark';
  showAllCoaches?: boolean;
}

const {
  title = "Contact Our Coaching Staff",
  description = "Have questions about our program or interested in one of our players? Reach out to our coaching staff.",
  variant = 'dark',
  showAllCoaches = true
} = Astro.props;

const isDark = variant === 'dark';
---

<section class:list={[
  "section-padding",
  isDark ? "bg-stars-navy" : "bg-gray-50"
]}>
  <div class="container-narrow">
    <div class="text-center mb-12">
      <h2 class:list={[
        "text-3xl md:text-4xl font-bold mb-4",
        isDark ? "text-white" : "text-gray-900"
      ]}>
        {title}
      </h2>
      <p class:list={[
        "text-lg max-w-2xl mx-auto",
        isDark ? "text-white/80" : "text-gray-600"
      ]}>
        {description}
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Head Coach -->
      <div class:list={[
        "rounded-xl p-6 text-center",
        isDark ? "bg-white/10" : "bg-white shadow-lg"
      ]}>
        <div
          class="w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4"
          style={isDark ? "background-color: rgba(255, 255, 255, 0.2);" : "background-color: rgba(6, 42, 75, 0.1);"}
        >
          <svg class="w-8 h-8" fill="none" stroke={isDark ? "#ffffff" : "#062a4b"} viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <h3 class:list={[
          "text-lg font-bold mb-1",
          isDark ? "text-white" : "text-gray-900"
        ]}>
          {team.coaches[0].name}
        </h3>
        <p class="font-medium text-sm mb-3" style="color: #3b82f6;">{team.coaches[0].title}</p>
        <a
          href={`mailto:${team.coaches[0].email}`}
          class:list={[
            "inline-flex items-center gap-2 text-sm font-medium transition-colors",
            isDark ? "text-white/80 hover:text-white" : "text-stars-navy hover:text-stars-blue"
          ]}
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Email
        </a>
      </div>

      <!-- Assistant Coaches -->
      {showAllCoaches && team.coaches.slice(1).map((coach: any) => (
        <div class:list={[
          "rounded-xl p-6 text-center",
          isDark ? "bg-white/10" : "bg-white shadow-lg"
        ]}>
          <div class:list={[
            "w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4",
            isDark ? "bg-white/20" : "bg-stars-navy/10"
          ]}>
            <svg class:list={["w-8 h-8", isDark ? "text-white" : "text-stars-navy"]} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <h3 class:list={[
            "text-lg font-bold mb-1",
            isDark ? "text-white" : "text-gray-900"
          ]}>
            {coach.name}
          </h3>
          <p class:list={[
            "font-medium text-sm mb-3",
            isDark ? "text-stars-blue" : "text-stars-blue"
          ]}>{coach.title}</p>
          <a
            href={`mailto:${coach.email}`}
            class:list={[
              "inline-flex items-center gap-2 text-sm font-medium transition-colors",
              isDark ? "text-white/80 hover:text-white" : "text-stars-navy hover:text-stars-blue"
            ]}
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Email
          </a>
        </div>
      ))}

      <!-- Recruiting Coordinator -->
      <div class:list={[
        "rounded-xl p-6 text-center",
        isDark ? "bg-white/10" : "bg-white shadow-lg"
      ]}>
        <div class:list={[
          "w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4",
          isDark ? "bg-white/20" : "bg-stars-navy/10"
        ]}>
          <svg class:list={["w-8 h-8", isDark ? "text-white" : "text-stars-navy"]} fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <h3 class:list={[
          "text-lg font-bold mb-1",
          isDark ? "text-white" : "text-gray-900"
        ]}>
          {team.recruitingCoordinator.name}
        </h3>
        <p class:list={[
          "font-medium text-sm mb-3",
          isDark ? "text-stars-blue" : "text-stars-blue"
        ]}>{team.recruitingCoordinator.title}</p>
        <a
          href={`mailto:${team.recruitingCoordinator.email}`}
          class:list={[
            "inline-flex items-center gap-2 text-sm font-medium transition-colors",
            isDark ? "text-white/80 hover:text-white" : "text-stars-navy hover:text-stars-blue"
          ]}
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Email
        </a>
      </div>
    </div>

    <!-- General Contact -->
    <div class:list={[
      "mt-8 text-center p-6 rounded-xl",
      isDark ? "bg-white/5" : "bg-white shadow-lg"
    ]}>
      <p class:list={[
        "text-sm mb-4",
        isDark ? "text-white/60" : "text-gray-500"
      ]}>
        For general inquiries:
      </p>
      <div class="flex flex-wrap justify-center gap-6">
        <a
          href={`mailto:${team.contactEmail}`}
          class:list={[
            "inline-flex items-center gap-2 font-medium transition-colors",
            isDark ? "text-white hover:text-stars-gold" : "text-stars-navy hover:text-stars-blue"
          ]}
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          {team.contactEmail}
        </a>
        {team.contactPhone && (
          <a
            href={`tel:${team.contactPhone.replace(/[^0-9+]/g, '')}`}
            class:list={[
              "inline-flex items-center gap-2 font-medium transition-colors",
              isDark ? "text-white hover:text-stars-gold" : "text-stars-navy hover:text-stars-blue"
            ]}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {team.contactPhone}
          </a>
        )}
      </div>
    </div>
  </div>
</section>
