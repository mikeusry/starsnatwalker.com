---
import schedule from '../data/schedule.json';
---

<section id="schedule" class="section-padding bg-gray-50">
  <div class="container-narrow">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Tournament Schedule
      </h2>
      <p class="text-lg text-gray-600">
        {schedule.season} Season
      </p>
    </div>

    <!-- Upcoming Events -->
    {schedule.events.length > 0 && (
      <div class="mb-12">
        <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center gap-2">
          <span class="w-3 h-3 bg-stars-blue rounded-full animate-pulse"></span>
          Upcoming Events
        </h3>

        <!-- Desktop Table -->
        <div class="hidden md:block bg-white rounded-xl shadow-lg overflow-hidden">
          <table class="w-full">
            <thead class="bg-stars-navy text-white">
              <tr>
                <th class="px-6 py-4 text-left font-semibold">Tournament</th>
                <th class="px-6 py-4 text-left font-semibold">Dates</th>
                <th class="px-6 py-4 text-left font-semibold">Location</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              {schedule.events.map((event, i) => (
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 font-medium text-gray-900">{event.name}</td>
                  <td class="px-6 py-4 text-gray-600">{event.dates}</td>
                  <td class="px-6 py-4 text-gray-600">{event.location}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>

        <!-- Mobile Cards -->
        <div class="md:hidden space-y-4">
          {schedule.events.map(event => (
            <div class="bg-white rounded-xl shadow-lg p-5">
              <h4 class="font-bold text-gray-900 mb-3">{event.name}</h4>
              <div class="space-y-2 text-sm text-gray-600">
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-stars-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  {event.dates}
                </div>
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-stars-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  {event.location}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- Past Results -->
    {schedule.pastEvents && schedule.pastEvents.length > 0 && (
      <div>
        <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center gap-2">
          <span class="w-3 h-3 bg-stars-navy rounded-full"></span>
          Past Results
        </h3>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
          {schedule.pastEvents.map(event => (
            <div class="bg-white rounded-xl shadow-lg p-5 border-l-4 border-stars-blue">
              <h4 class="font-bold text-gray-900 mb-2">{event.name}</h4>
              <p class="text-sm text-gray-600 mb-3">{event.dates} â€¢ {event.location}</p>
              <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-stars-blue/20 text-stars-navy">
                {event.result}
              </div>
            </div>
          ))}
        </div>
      </div>
    )}
  </div>
</section>
