---
import team from '../data/team.json';

// Generate slug from name
function generateSlug(name: string): string {
  return name.toLowerCase().replace(/\s+/g, '-');
}

// Combine all coaches and recruiting coordinator into one array
const allStaff = [
  ...team.coaches,
  team.recruitingCoordinator
];
---

<section id="coaches" class="section-padding bg-gray-50">
  <div class="container-narrow">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Our Coaching Staff
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Meet the dedicated coaches behind Stars National Walker. Our staff brings experience, passion, and a commitment to developing complete student-athletes.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      {allStaff.map((coach) => (
        <a href={`/staff/${generateSlug(coach.name)}`} class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-all group block">
          {coach.photo ? (
            <img
              src={coach.photo}
              alt={coach.name}
              class="w-20 h-20 rounded-full object-cover mx-auto mb-4"
            />
          ) : (
            <div class="w-20 h-20 bg-stars-navy rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
          )}
          <div class="text-center">
            <h3 class="text-xl font-bold text-gray-900 mb-1 group-hover:text-stars-blue transition-colors">{coach.name}</h3>
            <p class="text-stars-blue font-medium text-sm mb-3">{coach.title}</p>
            {coach.bio && (
              <p class="text-gray-600 text-sm mb-4 line-clamp-3">{coach.bio}</p>
            )}
            <span class="inline-flex items-center gap-2 text-sm font-medium text-stars-navy group-hover:text-stars-blue transition-colors">
              View Profile â†’
            </span>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
