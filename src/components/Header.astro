---
import team from '../data/team.json';

interface Props {
  transparent?: boolean;
}

const { transparent = false } = Astro.props;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '#roster', label: 'Roster' },
  { href: '#schedule', label: 'Schedule' },
  { href: '#about', label: 'About' },
  { href: '/contact', label: 'Contact' },
  { href: '/coaches', label: 'College Coaches', highlight: 'primary' },
  { href: '/tryout', label: 'Join Us', highlight: 'secondary' },
];
---

<header
  id="header"
  class:list={[
    "fixed top-0 left-0 right-0 z-50 transition-all duration-300",
    transparent ? "bg-transparent" : "bg-stars-navy shadow-lg"
  ]}
>
  <nav class="container-narrow">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <img
          src="/logo.webp"
          alt="Stars National Walker Logo"
          class="h-10 md:h-12 w-auto"
        />
        <div>
          <div class="text-white font-bold text-lg md:text-xl leading-tight">
            Stars National
          </div>
          <div class="text-stars-silver text-xs md:text-sm font-medium tracking-wider">
            WALKER
          </div>
        </div>
      </a>

      <!-- Desktop Nav -->
      <div class="hidden md:flex items-center gap-6">
        {navLinks.map(link => (
          link.highlight === 'primary' ? (
            <a
              href={link.href}
              class="font-bold px-4 py-2 rounded-lg transition-all hover:opacity-90"
              style="background-color: #FFD700; color: #062a4b;"
            >
              {link.label}
            </a>
          ) : link.highlight === 'secondary' ? (
            <a
              href={link.href}
              class="font-semibold px-4 py-2 rounded-lg border-2 border-white text-white transition-all hover:bg-white hover:text-stars-navy"
            >
              {link.label}
            </a>
          ) : (
            <a
              href={link.href}
              class="font-medium text-white/80 hover:text-white transition-colors"
            >
              {link.label}
            </a>
          )
        ))}
        <!-- X/Twitter Link -->
        <a
          href={team.socialLinks.twitter}
          target="_blank"
          rel="noopener noreferrer"
          class="text-white/80 hover:text-white transition-colors"
          aria-label="Follow us on X"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
          </svg>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden text-white p-2"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          <path id="close-icon" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-stars-navy-light border-t border-white/10">
    <div class="container-narrow py-4 space-y-3">
      {navLinks.map(link => (
        link.highlight === 'primary' ? (
          <a
            href={link.href}
            class="block font-bold py-2"
            style="color: #FFD700;"
          >
            {link.label}
          </a>
        ) : link.highlight === 'secondary' ? (
          <a
            href={link.href}
            class="block font-semibold py-2 text-white"
          >
            {link.label}
          </a>
        ) : (
          <a
            href={link.href}
            class="block font-medium py-2 text-white/80 hover:text-white"
          >
            {link.label}
          </a>
        )
      ))}
      <!-- X/Twitter Link -->
      <a
        href={team.socialLinks.twitter}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 text-white/80 hover:text-white font-medium py-2"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
        </svg>
        Follow on X
      </a>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });

  // Close menu on link click
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    });
  });

  // Header background on scroll
  const header = document.getElementById('header');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header?.classList.remove('bg-transparent');
      header?.classList.add('bg-stars-navy', 'shadow-lg');
    } else if (header?.dataset.transparent === 'true') {
      header?.classList.add('bg-transparent');
      header?.classList.remove('bg-stars-navy', 'shadow-lg');
    }
  });
</script>
