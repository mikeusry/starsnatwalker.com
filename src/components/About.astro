---
import team from '../data/team.json';

// Icon mapping for features
const iconPaths: Record<string, string> = {
  shield: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
  book: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253",
  team: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
  star: "M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"
};

const about = team.about || {
  title: "About Our Team",
  description: team.description,
  features: []
};
---

<section id="about" class="section-padding bg-white">
  <div class="container-narrow">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
          {about.title}
        </h2>

        <p class="text-lg text-gray-600 mb-6">
          {about.description}
        </p>

        <div class="space-y-4">
          {about.features && about.features.map((feature: any, index: number) => (
            <div class="flex items-start gap-4">
              <div class={`w-10 h-10 ${index % 2 === 0 ? 'bg-stars-navy/10' : 'bg-stars-blue/20'} rounded-lg flex items-center justify-center flex-shrink-0`}>
                <svg class={`w-5 h-5 ${index % 2 === 0 ? 'text-stars-navy' : 'text-stars-blue'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[feature.icon] || iconPaths.star} />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">{feature.title}</h3>
                <p class="text-gray-600 text-sm">{feature.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Coaching Staff -->
      <div class="space-y-6">
        <!-- Coaches -->
        {team.coaches && team.coaches.map((coach: any) => (
          <div class="bg-white rounded-xl p-6 shadow-lg">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-stars-navy/10 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-stars-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="font-bold text-gray-900 text-lg">{coach.name}</h3>
                <p class="text-stars-blue font-medium text-sm mb-2">{coach.title}</p>
                {coach.bio && <p class="text-gray-600 text-sm">{coach.bio}</p>}
                <a
                  href={`mailto:${coach.email}`}
                  class="inline-flex items-center text-sm text-stars-navy hover:text-stars-blue transition-colors mt-3"
                >
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  {coach.email}
                </a>
              </div>
            </div>
          </div>
        ))}

        <!-- Recruiting Coordinator -->
        <div class="bg-white rounded-xl p-6 shadow-lg">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-stars-blue/20 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-stars-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="font-bold text-gray-900 text-lg">{team.recruitingCoordinator.name}</h3>
              <p class="text-stars-blue font-medium text-sm mb-2">{team.recruitingCoordinator.title}</p>
              {team.recruitingCoordinator.bio && <p class="text-gray-600 text-sm">{team.recruitingCoordinator.bio}</p>}
              <a
                href={`mailto:${team.recruitingCoordinator.email}`}
                class="inline-flex items-center text-sm text-stars-navy hover:text-stars-blue transition-colors mt-3"
              >
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                {team.recruitingCoordinator.email}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
