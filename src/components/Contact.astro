---
import team from '../data/team.json';
---

<section id="contact" class="section-padding bg-stars-navy">
  <div class="container-narrow">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Contact Us
      </h2>
      <p class="text-lg text-white/70 max-w-2xl mx-auto">
        Interested in learning more about Stars National Walker? Reach out to our coaching staff.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <!-- Head Coach -->
      <div class="bg-white rounded-xl p-6 text-center">
        <div class="w-16 h-16 bg-stars-red/10 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-stars-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-1">{team.headCoach.name}</h3>
        <p class="text-stars-red font-medium mb-4">{team.headCoach.title}</p>
        <a
          href={`mailto:${team.headCoach.email}`}
          class="btn-primary w-full"
        >
          Email Coach
        </a>
      </div>

      <!-- Recruiting Coordinator -->
      <div class="bg-white rounded-xl p-6 text-center">
        <div class="w-16 h-16 bg-stars-gold/20 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-stars-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-1">{team.recruitingCoordinator.name}</h3>
        <p class="text-stars-gold font-medium mb-4">{team.recruitingCoordinator.title}</p>
        <a
          href={`mailto:${team.recruitingCoordinator.email}`}
          class="btn-gold w-full"
        >
          Recruiting Inquiries
        </a>
      </div>
    </div>

    <!-- College Coaches CTA -->
    <div class="mt-12 text-center">
      <div class="inline-flex items-center gap-2 bg-white/10 border border-white/20 rounded-full px-6 py-3">
        <svg class="w-5 h-5 text-stars-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
        <span class="text-white font-medium">College Coaches: Request player information via email</span>
      </div>
    </div>
  </div>
</section>
