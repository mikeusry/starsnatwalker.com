---
import team from '../data/team.json';

// Icon mapping for features
const iconPaths: Record<string, string> = {
  shield: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
  book: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253",
  team: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
  star: "M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"
};

const about = team.about || {
  title: "About Our Team",
  description: team.description,
  features: []
};
---

<section id="about" class="section-padding bg-white">
  <div class="container-narrow">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {about.title}
        </h2>

        <p class="text-xl text-gray-700 mb-4 font-medium">
          Where elite talent meets elite opportunity.
        </p>

        <p class="text-lg text-gray-600 mb-6">
          {about.description}
        </p>

        <div class="space-y-4 mb-8">
          {about.features && about.features.map((feature: any, index: number) => (
            <div class="flex items-start gap-4">
              <div class={`w-10 h-10 ${index % 2 === 0 ? 'bg-stars-navy/10' : 'bg-stars-blue/20'} rounded-lg flex items-center justify-center flex-shrink-0`}>
                <svg class={`w-5 h-5 ${index % 2 === 0 ? 'text-stars-navy' : 'text-stars-blue'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[feature.icon] || iconPaths.star} />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900">{feature.title}</h3>
                <p class="text-gray-600 text-sm">{feature.description}</p>
              </div>
            </div>
          ))}
        </div>

        <!-- Why Join Us -->
        <div class="bg-stars-navy/5 rounded-xl p-6 mb-6">
          <h3 class="font-bold text-gray-900 mb-3">Why Stars National Walker?</h3>
          <ul class="space-y-2 text-gray-700">
            <li class="flex items-center gap-2">
              <span style="color: #FFD700;">★</span>
              Play in front of 50+ D1 scouts at premier showcases
            </li>
            <li class="flex items-center gap-2">
              <span style="color: #FFD700;">★</span>
              Personalized recruiting guidance from day one
            </li>
            <li class="flex items-center gap-2">
              <span style="color: #FFD700;">★</span>
              Train with top-tier coaching staff year-round
            </li>
            <li class="flex items-center gap-2">
              <span style="color: #FFD700;">★</span>
              Join a team culture built on excellence and integrity
            </li>
          </ul>
        </div>

        <!-- CTA -->
        <a
          href="/tryout"
          class="inline-flex items-center gap-2 font-bold px-6 py-3 rounded-lg transition-all hover:opacity-90"
          style="background-color: #FFD700; color: #062a4b;"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
          Join Our Team - Apply Now
        </a>
      </div>

      <!-- Team Image -->
      <div class="relative">
        <img
          src="/team.webp"
          alt="Stars National Walker Team"
          class="w-full rounded-2xl shadow-2xl"
        />
        <div class="absolute -bottom-4 -right-4 bg-stars-navy text-white px-6 py-3 rounded-xl shadow-lg">
          <p class="font-bold text-lg">Alliance Atlantic Region</p>
          <p class="text-stars-blue text-sm">Champions 2025</p>
        </div>
      </div>
    </div>
  </div>
</section>
